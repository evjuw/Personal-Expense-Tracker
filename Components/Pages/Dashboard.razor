        gap: 20px;
        margin-bottom: 20px;
    }

    .overview-box {
        border: 2px solid white;
        padding: 20px;
        border-radius: 10px;
        width: 150px;
        background-color: black;
        color: white;
        font-size: 16px;
        text-align: center;
    }

    .pie-chart-container {
        flex-shrink: 0;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 20px;
    }

    .btn {
        background-color: white;
        color: black;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn:hover {
