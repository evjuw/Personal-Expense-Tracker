@page "/"
@inject NavigationManager NavigationManager

<div class="home-container">
    <img src="Cash.jpg" alt="Cash Image" class="cash-image" />

    <h1>Welcome to the Personal Expense Tracker</h1>
    <p>Your go-to application for managing and tracking personal expenses effectively.</p>
    <button class="login-button" @onclick="RedirectToLogin">Go to Login</button>
</div>

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: linear-gradient(135deg, #2b5876, #4e4376);
        color: #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden;
    }

    .home-container {
        text-align: center;
        background-color: rgba(0, 0, 0, 0.8);
        padding: 40px 60px;
        border-radius: 20px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        max-width: 600px;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        top: -50px; 
    }

    .cash-image {
        width: 120px;
        height: 120px;
        margin-bottom: 20px;
        border-radius: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        background-color: white;
    }

    h1 {
        font-size: 36px;
        margin-bottom: 15px;
        font-weight: bold;
        line-height: 1.3;
    }

    p {
        font-size: 20px;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .login-button {
        padding: 15px 35px;
        font-size: 20px;
        font-weight: bold;
        color: #ffffff;
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

        .login-button:hover {
            background: linear-gradient(135deg, #feb47b, #ff7e5f);
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }
</style>

@code {
    private void RedirectToLogin()
    {
        Console.WriteLine("RedirectToLogin called");
        NavigationManager?.NavigateTo("/login");
    }
}
